<div class="utility-bar" role="region" aria-label="Utility" {{ block.shopify_attributes }}>
  <div class="utility-bar__wrapper page-width">
    {%- for block in section.blocks -%}
      <a href='{{- block.settings.url -}}'>{{- block.settings.text -}}</a>
    {%- endfor -%}  
  </div>
</div>

{% schema %}
{
  "name": "Utility bar",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "utility",
      "name": "Utility bar",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}
